 <!-- 自定义模态框  取消订单-->
 <dialog id="modal"
            title="温馨提示"
            cancelText="取消"
            confirmText="确认"
            bind:cancelEvent="_cancelEvent"  
            bind:confirmEvent="_confirmEventFirst" 
            >
    <view class='modal-body'>
        <text>您确定未领取吗？</text>
    </view>
</dialog>

 <!-- 自定义模态框  确认收货-->
  <dialog id="modals"
            title="温馨提示"
            cancelText="取消"
            confirmText="确认"
            bind:cancelEvent="cancel"  
            bind:confirmEvent="confirm">
    <view class='modal-body'>
        <view>您确定撤销投诉吗？</view>     
    </view>
</dialog> 

