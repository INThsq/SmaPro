        <block wx:if="{{item.praise_status == 0}}" style="color:#FC0C16!important">佣金{{item.reward_money}}元<block wx:if="{{currentTabs==0}}">(已赠送)</block></block>
        <block wx:if="{{item.praise_status == 1}}" style="color:#FC0C16!important">佣金{{item.reward_money}}元<block wx:if="{{currentTabs==0}}">(凭证已上传)</block></block>
        <block wx:if="{{item.praise_status == 2}}" style="color:#FC0C16!important">佣金{{item.reward_money}}元<block wx:if="{{currentTabs==0}}">(投诉中)</block></block>
        </view>
        </view>
        <view class="order-con">
          <image src="{{item.image}}"></image>
          <view>
            <view class="name">{{item.title}}</view>
