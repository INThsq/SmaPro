            <view class="price"><text style='font-size:10px;'>￥</text>{{item.price}} X {{item.buy_num}}</view>
          </view>
        </view>
        <view class='order-fans'>
          <view  class='names'>
          <image src='{{item.member_oauth.headimgurl}}' style='margin-right:26rpx;'></image>{{item.member_oauth.nickname}}{{item.perfect}}
          </view>
          <view class='sf'>
            <text class='out' style='font-size:29.17rpx;font-weight:bold;'>免费领取</text>
          </view>
        </view>
      </view>
         <view class='btn'>
          <block wx:if="{{item.praise_status == 0}}">
          <button class='canel' data-id="{{gift_praise_type}}" data-statu="{{item.praise_status}}"   data-order="{{item.order_num}}"  bindtap="Upload">上传核销</button>
          </block>
        <block wx:if="{{item.praise_status == 1}}">
         <button class='canel' bindtap='Voucher' data-id="{{gift_praise_type}}" data-statu="{{item.praise_status}}" data-dot="{{item.dot_num}}"  data-order="{{item.order_num}}">提货凭证</button>
        </block>
        <block wx:if="{{item.praise_status == 2}}">
        <button class='canel'>等待撤销</button>
           </block>
          </view>
          
    </view>
    </block>
    </view>
    </view>  
</view>

