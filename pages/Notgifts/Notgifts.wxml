<!-- 引用组件的页面模版 -->
<view class="wrapper">
  <view class='back' bindtap='{{tab==1?"backs":"back"}}'>
    <image src='http://oss.myzy.com.cn/wechat/images/goback.png'></image>
  </view>
  <view class="tetxs" wx:if="{{gift_praise_type == 0}}">未领礼物</view>
  <view class="tetxs" wx:else>赠送礼品</view>

</view>

<!-- 选项卡  用户  0时-->
<view wx:if="{{gift_praise_type == 0}}">
<view class='tab' >
    <view class="swiper-tab">
     <view class="swiper-tab-item {{currentTab==0?'active':''}}"   data-current="0" data-id="-1" bindtap="clickTab">全部</view>
     <view class="swiper-tab-item {{currentTab==1?'active':''}}"   data-current="1" data-id="0" bindtap="clickTab">待领取</view>
     <view class="swiper-tab-item {{currentTab==2?'active':''}}"   data-current="2" data-id="1" bindtap="clickTab">已领取</view>
     <view class="swiper-tab-item {{currentTab==3?'active':''}}"   data-current="3" data-id="2" bindtap="clickTab">已投诉</view>
</view>
</view>

 <view class='order-conts'  wx:if ="{{gift_praise_list.length == 0}}">
          <view class='noW' >
              <image src='http://oss.myzy.com.cn/wechat/images/adress.png'></image>
              <text>抱歉，暂无数据</text>
  </view>
  </view>

 <view class='order-conts'>

<!-- 订单主体 --> 
    <view class="order-info"  wx:if="{{gift_praise_type == 0}}" style='margin-top:128rpx;'>
    <block wx:for="{{gift_praise_list}}" wx:key="index">
    <view class='order-lists'>
      <view class="order-list">
        <view class="order-num">
        <view class='touxiang'>
          <image src='{{item.member_mall.logo}}'></image>
          <text>{{item.member_mall.name}}</text>
        </view>
        <view class='wait'>
        <block wx:if="{{item.praise_status == 0}}">待领取</block>
        <block wx:if="{{item.praise_status == 1}}">已领取</block>
        <block wx:if="{{item.praise_status == 2}}">已投诉</block>
        </view>
        </view>
        <view class="order-con">
          <image src="{{item.image}}"></image>
          <view>
            <view class="name">{{item.title}}</view>
            <view class="price"><text style='font-size:10px;'>￥</text>{{item.price}} X {{item.buy_num}}</view>
          </view>
        </view>
        <view class='order-fans'>
          <view  class='names'>
          <image src='{{item.member_oauth.headimgurl}}' style='margin-right:26rpx;'></image>{{item.member_oauth.nickname}}{{item.perfect}}
          </view>
          <view class='sf'>
            <text class='out' style='font-size:29.17rpx;color:#1E8713;font-weight:bold;'>免费领取</text>
          </view>
        </view>
      </view>
         <view class='btn'>
          <block wx:if="{{item.praise_status == 0}}">
          <button class='canel' data-id="{{gift_praise_type}}" data-index="{{index}}" data-statu="{{item.praise_status}}" data-dot=""  data-order="{{item.order_num}}" bindtap="NoRec">未领取投诉</button>
          </block>
        <block wx:if="{{item.praise_status == 1}}">
        <button class='canel' bindtap='Voucher' data-id="{{gift_praise_type}}" data-index="{{index}}" data-statu="{{item.praise_status}}" data-dot=""  data-order="{{item.order_num}}">提货凭证</button>
        </block>
        <block wx:if="{{item.praise_status == 2}}">
        <button class='canel' bindtap="Revoke" data-statu="{{item.praise_status}}" data-index="{{index}}" data-go="1" data-order="{{item.order_num}}" data-id="{{gift_praise_type}}">撤销投诉</button>
           </block>
          </view>
          
    </view>
    </block>
    </view>
    </view>  
</view>







<!-- 分销者 -->
<view wx:if="{{gift_praise_type == 1}}">
<view class='tab' >
    <view class="swiper-tab">
     <view class="swiper-tab-item {{currentTabs==0?'active':''}}" data-id="-1"  data-currents="0" bindtap="clickTabs">全部</view>
     <view class="swiper-tab-item {{currentTabs==1?'active':''}}" data-id="0"   data-currents="1" bindtap="clickTabs">已赠送</view>
     <view class="swiper-tab-item {{currentTabs==2?'active':''}}" data-id="1"   data-currents="2" bindtap="clickTabs">凭证已上传</view>
     <view class="swiper-tab-item {{currentTabs==3?'active':''}}" data-id="2"   data-currents="3" bindtap="clickTabs">投诉中</view>

</view>
</view>

 <view class='order-conts' style='margin-top:0!important'>
          <view class='noW' wx:if ="{{gift_praise_list.length == 0}}">
              <image src='http://oss.myzy.com.cn/wechat/images/adress.png'></image>
              <text>抱歉，暂无数据</text>
  </view>

