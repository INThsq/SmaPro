/* pages/Address_es/Address_es.wxss */
@import "../../static/css/index.wxss";
.addAddress-container{
  margin-top: 140rpx;
  z-index: 9;
}
.item{
  display: flex;
  padding:0 30rpx;
  background: white;
  border-bottom: 1px solid #F3F3F3;
  height:48px;
  line-height: 48px;
}
.item text{
  font-size: 33.3rpx;
  color: #333;
  width:202rpx!important;
  margin-right:56rpx;
}

input{
  font-size: 33.3rpx;
  width: 100%;
  height: 100%;
}

.item:nth-child(3){
  position: relative;
  
}
.item:nth-of-type(3) text{
  margin-right: 0!important;
}
.area{
  width:200rpx;
}
.right{
  color: #999;
  position: absolute;
  right: 30rpx;
  top:0;
}
.area_xx{
  height: 70px;
}

.wx-switch-input{width:42px !important;height:26px !important;}
.wx-switch-input::before{width:41px !important;height:24px !important;}
.wx-switch-input::after{width: 23px !important;height:23px !important;}
.item:last-child text{
  width: 120px!important;
}
.area_xx view{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.item:last-child{
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx!important;
  margin-top: 16rpx;
}
button::after{
 border: none;
 
}
button{
height:42px;
background:#F43736;
border-radius:4px;
line-height: 42px;
font-size: 33.3rpx;
color: white;
}
.btn{
  padding: 0 30rpx;
  box-sizing: border-box;
   position: absolute;
  bottom: 30rpx;
  width:100%;
}
.text::-webkit-input-placeholder{transform:translateY(180px);}

/* 弹出框 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height:872rpx;
  width: 100%;
  /* overflow: hidden; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding:0 30rpx;
  box-sizing: border-box;
  
}
.title image{
    width: 14px;
    height: 12px;
}
.area{
  font-size: 33.3rpx;
  color: #333;
  width: 200px;
}
.title{
  display: flex;
  justify-content: space-between;
  padding: 26rpx 0;
}
.title text{
  font-size: 33.3rpx;
  color: #333;
  font-weight: bold;
}
.nav-name{
  display: inline-block;
  color: #2b2e33;
  font-size: 30rpx;
  padding-bottom: 14rpx;
  margin-right: 40rpx;
}
.nav-hover{
  color:#FF0000!important;
  border-bottom:2px solid #FF0000!important;
}
.cur{
   color:#FF0000!important;
}
.items{
  height: 40px;
  line-height: 40px;
  font-size: 29.17rpx;
  color: #333;
}


.remarks{
  height:144rpx; 
  background: white;
}
textarea,.remarks{
  width: 100%;
  padding-top: 24rpx;
  font-size: 33.3rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}