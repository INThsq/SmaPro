/* pages/jjb.wxss */
page{
  background: white;
}
.container{
  margin-top:144rpx;
  position: relative;
}
video{
  width: 100%;
  height:180px;
}
.conts-img{
  width:100%;
  height:118rpx;
}
.sale-title{
  display: flex;
  margin-top:-8rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.texts{
  display:inline-block;
  width: 100%;
  overflow:hidden;
}
.ones{
  display: inline-block;
  width: 33.3%;
  float: left;
}
.sale-title .block{
  display: flex;
  width: 8rpx;
  height: 30rpx;
  background:black;
}
.btns{
  display: flex;
width: 100%;
position: relative;
}
.ones text{
  display: block;
  text-align: center;
  font-size: 29.17rpx;
  color: #666;
}
.btns view{
  display: flex;
  line-height: 50px;
  justify-content: center;
  color:white;
  font-size: 33.3rpx;
}
.btns .btn-left{
   flex-grow: 0;
    flex-shrink: 0;
  width: 308rpx;
  background: #643D3D;
}
 .triangle{
    width: 0;
    height: 0;
    border-top: 10px solid #FFB34F;
    border-right: 10px solid transparent;
    position: absolute;
    right:30rpx;
}
.btns .btn-right{
  background:rgba(234,68,68,1);
  opacity:0.5;
  width: 100%;
  position: relative;
}
.arrow{
  position:absolute;
  right: 22rpx;
  bottom:80rpx;
}
.arrow text{
  background: #FFB34F;
  color: white;
  font-size: 25rpx;
  text-align:center;
  padding:6rpx 10rpx;
  box-sizing: border-box;border-radius:2px 2px 2px 0px;
  line-height: 18px;
  position:relative;

}
.bb{
  opacity: 1!important;
}
.check{
  display: flex;
  font-size: 25rpx;
  color: #666;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  margin-bottom: 40rpx;
}
.check image{
  width: 26rpx;
  height: 26rpx;
  
}
.sale-title image{
  width:156rpx;
  height: 34rpx;
  margin:62rpx 0 40rpx;
}
.sale-cont{
  display: inline-block;
  /* flex-direction:row; */
  overflow: hidden;
 white-space: nowrap;

}
.cont image{
  width: 100%;
  height: 100%;
  display: flex;
}
.conts{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.cont-one{
  background:url("http://oss.myzy.com.cn/wechat/images/img_jj_4.png") no-repeat center;
   background-size:100% 100%;
}
.cont-two{
  background:url("http://oss.myzy.com.cn/wechat/images/img_jj_5.png") no-repeat center;
   background-size:100% 100%;
}
.cont-thr{
  background:url("http://oss.myzy.com.cn/wechat/images/img_jj_6.png") no-repeat center;
   background-size:100% 100%;
}
.cont{
  display: inline-block;
  width:352rpx;
  height:290rpx;
  text-align: left;
  padding-left:30rpx;
  box-sizing: border-box;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.cont:first-child{
  padding-left: 60rpx!important;
}
.cont-text{
  display: inline-block;
  margin-top: 164rpx;
  box-sizing: border-box;
}
.one,.two{
  font-size:25rpx;
  color: #666;
 display:block;
}
.circle{
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background: #666;
  margin-right: 14rpx;
}
.two{
  margin-top: 4rpx;
}