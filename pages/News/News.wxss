/* pages/News/News.wxss */
@import "../../static/css/index.wxss";
.container{
  margin-top: 142rpx;
}
.container .item{
display: flex;
align-items: center;
padding:39rpx 30rpx;
background: white;
box-sizing: border-box;
position: relative;
}
.item::after{
   position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1px;
  background-color: #f3f3f3;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
}
.item image{
  width: 102rpx;
  height: 102rpx;
  display: flex;
  margin-right: 30rpx;
}
.item-right{
  width: 100%;
  justify-content: space-around;
}
.title{
  display: flex;
  justify-content:space-between;
  margin-bottom: 18rpx;
  align-items: center;
}
.title .one{
  font-size: 33.3rpx;
}
.title .two{
  font-size: 25rpx;
  color: #666;
}
.titles{
  font-size: 29.17rpx;
  color: #666;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
height: 19px;
}
.noW image{
  margin-top: 0!important;
  display: flex;
}
.noW{
  flex-direction: column;
}
.order-conts{
  display: flex;
  justify-content: center;
  height:90vh;
  background: white;
  align-items: center;
}
.item-left{
  position: relative;
}
.span{
right:8px;
top:-8px;
width:17px;
height:17px;
background:rgba(255,255,255,1);
box-shadow:0px 0px 0px 1px rgba(255,255,255,1);
border-radius:100px;
border:1px solid rgba(231,62,62,1);
line-height: 17px;
text-align: center;
font-size: 12px;
color: #EC3535;
position: absolute;
}