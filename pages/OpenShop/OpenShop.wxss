/* pages/OpenShop/OpenShop.wxss */
.container{
  margin-top: 140rpx;
}
.item{
  height: 48px;
  background: white;
  display: flex;
  justify-content: space-between;
  font-size: 33.3rpx;
  line-height:48px;
  padding: 0 30rpx;
  border-bottom:.5px solid #F3F3F3;
}
.item:first-child{
  height: 124rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
input{
  width:164rpx;
  height:100%; 
  text-align: right
}
.texts{
  width:164rpx;
  text-align: right;  
  color: #908090;
}
.texts .right{
  top:0!important;
  margin-left: 5px!important;
}
.item image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-top: 4rpx;
}
.right{
  color: #999;
  display: inline-block;
  position: relative;
  top:-30%;
  line-height: 48px;
}
.item:first-child .text{
  line-height:90rpx!important;
}

