.container{
    margin-top: 142rpx;
}
.modal{
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 100%; 
    z-index:99999;
  }
  
  .modal-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 97;
    background-color: rgba(0,0,0,0.6);
  }
  
  
  .modal-layer-sm{
     width: 60%; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;  
  } 
  
  .modal-layer-md{
     width:544rpx; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;    
  } 
  
  .modal-layer-full{
     width: 100%; 
     left: 0;  
  } 
  .modal-body{
    font-size:33.3rpx;
    color: #999;
  }
  .modal-body cover-view{
    font-size:25rpx;
    text-align:left;
  }
  .modal-header cover-view:first-child{
    font-size:33.3rpx;
  }
  .modal-layer{

    position: absolute;
    background: white;
    top: 50%;    
    display: flex;
    flex-direction: column;
    z-index: 98;   
    box-shadow: 0 4rpx 14rpx rgba(0,0,0,.4); 
  }
  
  .modal-header{
    background: #fff;
    color:  #333;
    padding:36rpx 48rpx 18rpx;
    font-size: 36rpx;
    text-align: left;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;  
 }

  .modal-body{
    flex:  1;  
    padding:0 48rpx;
    background: #ffffff; 
    margin-bottom:50rpx; 
  color: #999;
  font-size: 33.3rpx;
  text-align: left;
  }

  

.modal-footer{
    background: #ffffff;
    flex-direction: row;
    display: flex;
    align-items: center;
    height: 84rpx;
    line-height: 84rpx;
    width: 100%;  
    justify-content: center;
    font-size: 29.17rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;  
}
.modal-body cover-view{
  font-size: 29.17rpx;
}
.modal-close{
    color: #fff;
    font-size: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 0;
    z-index: 98;
}
.title{
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0 12rpx;
    box-sizing: border-box;
    background: white;
}
.cont{
    padding: 0 30rpx;
    box-sizing: border-box;
    background: white;
    margin-bottom: 12rpx;
}
.ing{
    padding-bottom: 24rpx;
    box-sizing: border-box;
    position: relative;
}
.fix-btn{
    display:flex;
    position: fixed;
    bottom: 0;
    width: 100%;

}
.fix-left{
    width: 150px;
    display: flex;
    height: 50px;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: #643D3D;
    font-size: 29.17rpx;
}
.fix-right{
    display: flex;
    justify-content: center;
    align-items: center;
    width: calc(100% - 150px);
    background:#F43736;
    font-size: 29.17rpx;
    color: white;
}
.ing::after,.qy::after{
    position: absolute; 
    content: '';
    width: 100%;
    left: 0;
    bottom: 0;
    height: 1px;
    background-color: #f2f2f2;
    -webkit-transform: scale(1, 0.5);
    transform: scale(1, 0.5);
    -webkit-transform-origin: center bottom;
    transform-origin: center bottom;
}
.tit-left{
    font-size: 33.3rpx;
    color: #333;
    line-height: 24px;
}
.name{
    color: #666;
    font-size: 29.17rpx;
    margin-bottom:6rpx;
    line-height: 20px;
}
.icon{
    align-items: center;
    line-height: 48px;
    margin-top: 16rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: white;
    font-size:29.17rpx;
}
.tit-right{
    font-size: 29.17rpx;
    display: flex;
    color: #4C86F8;
    line-height: 20px;
    margin-bottom: 6rpx;
}
.qy{
    padding: 24rpx 0;
    box-sizing: border-box;
    position: relative;
}
.tj{
