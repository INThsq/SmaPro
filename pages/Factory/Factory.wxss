/* pages/Factory/Factory.wxss */
.container{
  margin-top: 144rpx;
  position: relative;
}
.bg{
  height: 440rpx;
  width: 100%;
}
.bg image{
  width: 100%;
  height: 100%;
}
.conts{
  position: absolute;
  padding: 0 30rpx 100rpx 30rpx;
  box-sizing: border-box;
  top:200rpx;
  width: 100%;
}

.list-after{
  border-radius:12px;
  z-index: 99;
  display: none;
  width: 100%;
  height:300rpx;
  padding:0 30rpx;
  box-sizing: border-box;
   background:url(http://oss.myzy.com.cn/wechat/images/img_shouqing.png) no-repeat center;
   background-size: 100% 100%;
  opacity:0.6;
  position: absolute;
  top: 0;
  left:0;
}
.show{
  display: block!important;
}
.list image{
  height: 300rpx;
  width: 100%;
  display: block;
}
.list{
  position: relative;

}
.list-cont{
  padding:20rpx 24rpx 26rpx;
  box-sizing: border-box;
  background: white;
  box-shadow:0px 2px 8px 0px rgba(231,231,231,0.5);
border-radius:12px;
}
.list-cont .title{
  font-size:33.3rpx;
  color:#333; 
 display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp:1;
overflow: hidden;
}
.title-cont{
  padding-top:16rpx;
  color: #D87416;
}
.title-cont .one{
  display: flex;
  align-items:center;
  font-size: 25rpx;
  margin-bottom: 6rpx;
}
.title-cont .one image{
  width: 20rpx;
  height: 24rpx;
  display: flex;
  margin-right:10rpx;
}
.title-cont .three{
  display: flex;
  margin-top:10rpx;
}
.title-cont .three view{
      display: flex;
        justify-content: center;
        align-items: center;
}
.money{
  color: #F43736;
  font-weight: bold;
  margin-right:8rpx;
}
.yang{
  font-size: 29.17rpx;
}
.num{
  font-size: 33.3rpx;
}
.th{
  color: #999;
  font-size: 12px;
  text-decoration: line-through;
}
.btn{
  margin-left: auto;
  font-size:29.17rpx;
  color: white;
  background: #F43736;
  width: 184rpx;
  height: 56rpx;
  border-radius:100px;
}
.list-ti{
margin: 40rpx 0 32rpx;
font-size: 29.17rpx;
color: #333;
 display: flex;
        align-items: center;
}
.list-ti image{
  width: 144rpx;
  height:34rpx;
  margin-right: 20rpx;
}
.grey{
  background: #AEACAC!important;     
}
.tx_top_progress{
  width:154rpx;
  height: 12rpx;
  z-index: 1;
margin-left: auto;
  border-radius: 10px;
  overflow: hidden;
}
.free{
  color: #666;
  font-size: 10px;
  margin-left: auto;
}