/* pages/Robmoney/Robmoney.wxss */
.container{
  margin-top: 140rpx;
}
.rob-top{
  height: 282rpx;
  background: url('http://oss.myzy.com.cn/wechat/images/icon_ttqq_beijing.png') no-repeat center;
  background-size: 100% 100%;
  padding:18rpx 30rpx 24rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.top-title{
  font-size: 29.17rpx;
  color:white;

}
page{
  background: white;
}
.top-rules{
  position: absolute;
  font-size:25rpx;
  color:white;
  width: 80rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: url('http://oss.myzy.com.cn/wechat/images/icon_ttqq_guize.png') no-repeat center;
  background-size: 100% 100%;
  text-align: center;
  top:-2px;
  z-index:9;
  right: 50rpx;

}
.top-conts{
  padding: 0 34rpx;
  clear: both;
}
.item image{
  width: 102rpx;
  height: 104rpx;
}
.item{
  margin-top: 34rpx;
  float: left;
}
.item:first-child{
  width: 144rpx;
}
.item:nth-child(2),.cont-text text:nth-of-type(2){
  width:220rpx;
  margin-left: 118rpx;
}
.item:last-child{
  width: 140rpx;
  text-align:right;
}
.cont-text text{
  color:white;
  font-size: 25rpx;
  display: inline-block;
}
.cont-text text:last-child{
margin-left:70rpx;
}
.cont-text text:nth-of-type(2){
  margin-left:90rpx!important;
}
.all image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 12rpx;
  position: relative;
  top: -2px;
}
.all{
  font-size: 33.3rpx;
  color: #333;
  line-height: 24px;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: .5px solid #f3f3f3;
}
.right{
  width:24rpx!important;
  height:14rpx!important;
  margin-left: 8rpx;
}
.list-conts{
  padding: 0 24rpx 22rpx;
}
.list{
  padding:22px 0 10rpx;
  border-bottom: .5px solid #f3f3f3;
  display: flex;
}
.list-left{
  margin-right: 24rpx;
}
.pr{
  width:234rpx;
  height: 234rpx;
 position: relative;
}
.pa{
  position: absolute;
  width:100rpx;
  height: 100rpx;
  left:26rpx;
}
.name{
  font-size:29.17rpx;
  color: #333;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 4rpx;
}
.bottom-left text{
  display: block;
}
.free{
  font-size:25rpx;
  color: #26C713;
}
.price{
  font-size: 10px;
  color: #999;
 text-decoration: line-through;
 margin: 12rpx 0;

}
.pur{
  font-size: 25rpx;
  color: #666;
  margin-bottom: 16rpx;
}
progress{
  width: 144rpx;
  border-radius:4px;
  position: relative;
}
.list-bottom{
  display: flex;
}
.bottom-left{
  width: 50%;
float: left;
}
.bottom-right image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 32rpx;
}
.bottom-right{
  width: 50%;
  text-align: center;
  
}
.bottom-right text{
  display: block;
  color: #F43736;
  font-size: 25rpx;
  margin-top: 8rpx;
}
.ll{
  font-size: 8px;
  color: #999;
  width: 71rpx;
  position: absolute;
  left:58%;
  margin-top: -18rpx;
}