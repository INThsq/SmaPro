/* pages/BillDetail/BillDetail.wxss */
.container{
  margin-top: 140rpx;
}
page{
  background: white;
}
.packet{
  padding: 40rpx 30rpx 72rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom:.5px solid #f3f3f3;
}
.packet .pack-left{
  color: #999;
  font-size: 33.3rpx;
}
.pack-right{
  font-size: 64rpx;
  color: #F43736;
}
.type{
  padding:44rpx 30rpx;
  border-bottom:.5px solid #f3f3f3;

}
.type .list{
  font-size: 33.3rpx;
  display: flex;
  line-height: 50rpx;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.list .left{
  color:#999;
}
.list .right{
  color: #333;
}