/* pages/Bean_help/Bean_help.wxss */
.container{
margin-top: 160rpx;
background: white;
padding: 0 30rpx;
}
.container .items{
  padding:26rpx 0;
  position: relative;
}

.container .items::afterr{
    position: absolute; 
    content: '';
    width: 100%;
    left: 0;
    bottom: 0;
    height: 1px;
    background-color: #f3f3f3;
    -webkit-transform: scale(1, 0.5);
    transform: scale(1, 0.5);
    -webkit-transform-origin: center bottom;
    transform-origin: center bottom;
}
.iteml{
  
  width: 365rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 33.3rpx;
  font-weight: bold;
  line-height: 48rpx;
}
.item{
  display: flex;
  justify-content: space-between;
}
.itemls{
  color: #999;
  font-size: 25rpx;
  margin-top: 4rpx;
}
.itemr{
  font-size: 33.3rpx;
  font-weight: bold;
  color: #F43736; 
}
.itemrs{
  font-size:25rpx;
}