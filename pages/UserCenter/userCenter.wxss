/* pages/UserCenter/userCenter.wxss */
@import "../../static/css/index.wxss";
view{
  font-family:"SourceHanSansSC-Regular";
}
.user_info{
  background: grey;
  height:328rpx;
}
.ewm{
    width:100rpx;
    height:100rpx;
    margin-top:85rpx;
}
.order-item{
    background:#fff;
    margin-bottom: 16rpx;
    
}
  .order,.courtesy_title{
      display:flex;
      background: white;
      height:85.5rpx;
      padding:0 30rpx;
      box-sizing: border-box;
      line-height:85.5rpx;
      position: relative;
      /* border-bottom:.5px solid #F3F3F3; */
  }
 .order::after,.courtesy_title::after{
 position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1px;
  background-color: #f3f3f3;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
 }
  .myOrder,.myCour{
      flex:1;
      font-size:30rpx;
      font-family:SourceHanSansSC-Regular;
      font-weight:500;
      color:rgba(51,51,51,1);
  }
  .order .icon{
      flex:1;
      text-align:right;
      line-height:80rpx;
  }
.icon .all{
  font-size:25rpx;
  color:#999;
  margin-right: 18rpx;
}
.navCont view{
  font-size:25rpx;
}
.order .icon .iconfont{
  color: #999;
  font-size:24rpx;
}
.icon-right{
    color:#999;
    font-size:28rpx;
}
.navCont{
    display:flex;
}
.navCont .item{
    padding:28rpx 0 12rpx;
    font-size:24rpx;
    text-align:center;
    height:56px;
}
.icon image{
  width:172rpx;
  height: 40rpx;
  position: relative;
  top:10%;
}
.navCont .iconfont{
    color:#666;
    font-size:50rpx;
    margin-bottom: 14rpx;
    display: inline-block
}
.accout{
  display: flex;
  flex-flow: wrap;
  background: white;
  margin-bottom: 16rpx;
  padding:34rpx 0;
}
.accout_item{
  display: flex;
  width: 33%;
  text-align: center;
  border-right:.5px solid #F3F3F3;
}
.accout_item:last-of-type{
  border: none;
}
.accout_item text{
  display: block;
  text-align: center;
  font-size: 25rpx;
}
.accout_item .money{
  color: #FF0000;
  font-size:34rpx;
  margin-bottom:16rpx;
}
.head-info{
  width: 60%!important;
}
navigator{
  display: block;
  width:100%;
  height: auto;
  font-size:28rpx;
  color:#666;
}
.head-left navigator{
  width:auto!important;
}
.myCour_icon{
  display: flex;
  width:100rpx;
  height: 40rpx;
}

.courtesy_cont{
  display: flex;
  background: white;
  flex-flow: wrap;
  padding:32rpx 0 20rpx;
}
.One{
  margin-bottom: 14rpx;
  
}
.One .sy{
  display: flex;
  width: 33%;
  text-align: center;
  border-right:.5px solid #F3F3F3;
  font-size: 25rpx;
  color: #666;

  
}
.One:nth-child(1) .sy image,.Two .sy image{
  width: 28px;
  height: 28px;
  
}
.sy:last-of-type{
  border: none;
}
.arrwo{
  /* height: 24rpx; */
  position: absolute;
  bottom:-10rpx;
  left: 0;
  width: 100%;
  z-index: 999;
}
.arrwo image{
  width: 100%;
  display: inline-block;
  height: 30rpx;
  
}
.courtesy_cont image,.navCont .item image{
  display: inline-block;
  overflow: hidden;
  width:24px;
  height:24px;
  margin-bottom:16rpx;
  vertical-align: middle;
  margin-right:20rpx;  
}
.navCont .item image{
  margin-right: 0;
}
.One .sy{
  margin-bottom: 16rpx;  
}
.Two{
  padding:44rpx 10px 20rpx;
}
.Two>view:nth-child(8){
  margin-right: 0!important;
}
.Two .sy{
  display: flex;
  margin-right:46rpx;
  width: calc(25% - 36rpx);
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom:40rpx;
}
.small{
  font-size: 10px;
  color: #999;
  text-align: center;
  margin-top:8rpx;
}
.sy:last-child .sy_title{
  position: relative;
}
.navCont{
  padding: 0 10px 10rpx;
}
.Two .sy:nth-child(4){
  margin-right: 0;
  
}

.myCour_icon image{
  width: auto;
  height: auto;
}
