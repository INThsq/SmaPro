<!--pages/Info/Info.wxml-->
<view>
  <my-component>
    <!-- 这部分内容将被放置在组件 <slot> 的位置上 -->
     <view>个人信息</view> 
  </my-component>
</view>

<!-- 内容区域 -->
<view class='container'>
<!-- 头像 -->
 <!-- info -->
    <view class='info' bindtap='toInfo'>
    <view class='left'>头像</view>
    <view class='right'>
    <image src='{{imgurl}}'></image>  
    </view>
    </view>

    <!-- nick -->
    <view class='cont'>
    <view class='nick'>
        <view class='left'>昵称</view>
        <view class='rights'>{{nickname}}</view>
    </view>

    <view class='sex'>
    <view class='left'>性别</view>
        <view class='rights'>{{sex}}</view>
    </view>
    </view>
</view>

    <!-- 二维码 -->
    <view class='code' bindtap='openCode'>
    <view class='left'>二维码</view>
    <view class='right'>
      <image src='http://oss.myzy.com.cn/wechat/images/icon_erweima1.png'></image>
    </view>
    </view>

  <!-- 同步 -->

    <view class='syn'>
      <image src='http://oss.myzy.com.cn/wechat/images/icon_tongbushuaxin.png'></image> 同步微信资料
    </view>


    <!-- load -->
<view class="load {{isShow ? 'show' : ''}}" >
  <image class="bth_image2"  animation="{{animationData}}"   src='http://oss.myzy.com.cn/wechat/images/icon_jiazaishuaxin.png'></image>正在加载…
  </view>



