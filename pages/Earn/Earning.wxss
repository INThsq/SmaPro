.swiper-tab{
    background: white;
    text-align: center;
    height:64rpx;
    line-height:64rpx;
    display: flex;
    flex-flow: row;
    font-size:26rpx;
    justify-content: space-between;
    border:1px solid #FF4A47;
    border-radius: 5px;
}
.swiper-tab-item{
    width: 30%; 
    color:#FF4A47;
    border-right: 1px solid #FF4A47;
}
.swiper-tab-item:last-child{
  border-right: none;
}
.tab{
  background: white;
  padding: 32rpx 32rpx 0 32rpx;
  box-sizing: border-box;
}
.tab_cont{
  padding: 0 32rpx;
  background: white;
}
.active{
    color:white;
    background: #F43736;
}
swiper{
  text-align: center;
  height: 700rpx;
}
swiper-item{
  background: white;
  font-size:28rpx;
  color:#666;

}
swiper .number{
  color: #333;
}
.num{
  display: flex;
  line-height: 100rpx;
  justify-content: space-between;
  border-bottom:.5px solid #F3F3F3;
}

