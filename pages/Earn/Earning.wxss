/* pages/Earn/Ear.wxss */
@import "../../static/css/index.wxss";
@import "../Balance/Balance.wxss";
.withdraw{
  height: 180rpx;
  background:url("http://oss.myzy.com.cn/wechat/images/img_sybb_beijing.png") no-repeat center;          background-size:cover;
  display: flex;
  color: white;
  padding:32rpx 46rpx 28rpx;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 140rpx;
}
.withdraw_left text{
  display: block;
}
.mon_title{
  font-size:29.17rpx; 
  margin-bottom:14rpx;
}
.money{
  font-size: 44rpx;
}
.zs{
  font-size: 25rpx;
  color: #666;
}
.number{
  font-size: 29.17rpx;
  color: #333;
}
.withdraw_right{
  position: relative;
  right: 0;
  display: block;
  font-size: 28rpx;
  letter-spacing: 2px;
}
.btnes{
  padding:2rpx 28rpx;
  border-radius:20px;
  border: 1px solid white;
  margin-top:56rpx;
  font-size: 29.17rpx;
}
.earn{
    display:flex;
    background: white;
    height:84rpx;
    padding:0 40rpx;
    box-sizing: border-box;
    line-height:84rpx;
    border-bottom:.5px solid #F3F3F3;
}
.myEarn{
    flex:1;
    font-size:30rpx;
    font-family:SourceHanSansSC-Regular;
    font-weight:500;
    color:rgba(51,51,51,1);
    padding-left: 24rpx;
}
.earn .xian{
  display: block;
  width:8rpx;
  height: 24rpx;
  background:#FF2742;
  margin-top: 28rpx;
}
.all_earn{
  display: flex;
  flex-flow: wrap;
  background: white;
  margin-bottom: 16rpx;
  padding:32rpx 0;
}

.all_earn .all_earn_item{
 display: flex;
  width:49.5%;
  border-right:1px solid #F3F3F3;
  font-size:28rpx;
  color:#666;
  justify-content:center;
}
.all_earn_item text{
  display: block;
  text-align: center;
}
.all_earn_item .money{
   font-size:34rpx;
  margin-top: 14rpx;
  color: #333;
  letter-spacing: 1px;
}
.all_earn .all_earn_item:last-child{
  border: none;
}
.all_earn{
  position: relative;
}
.all_earn_item image{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right:62%;
  top:24%;
}
.zs{
  font-size: 25rpx!important;
}
