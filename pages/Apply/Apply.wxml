        </view>
 </view>
<!-- 需付款 -->
  <view class='way-pay'>
    <text class='w'>需付款</text>
    <text class='m'>￥</text>
    <text class='q'>{{money}}</text>
  </view>

  <!-- 支付按钮 -->
  <view class='pay'>
  <button class='pay-btn' wx:if="{{types == 1}}" bindtap='topays'>立即支付</button>
 <button class='pay-btn' wx:else bindtap='topay'>立即支付</button>
  </view>

  </view>
  </view>



