<!--pages/ZtApply/Apply.wxml-->
<view>
  <my-component>
    <!-- 这部分内容将被放置在组件 <slot> 的位置上 -->
     <view>自提点申请</view> 
  </my-component>
</view>

<!-- 内容 -->
<view class="addAddress-container">
<!-- 收货人 -->
    <view class='item'>
        <text>加盟商家</text>
         <text style='width:100%!important;'>{{name}}</text>
    </view>

 <!-- 店铺名称 -->
      <view class='item name'>
        <text>店铺名称</text>
         <input placeholder="例如：建邦华府店" type='text' placeholder-class="placeholderStyle" bindinput='inputDotName' data-item='name'/>
    </view>

    <!-- 手机号 -->
      <view class='item'>
        <text>联系电话</text>
         <input placeholder="11位手机号" type='number' placeholder-class="placeholderStyle" bindinput='inputTel' data-item='mobile'/>
    </view>

    <!-- 所在区域 -->
    <view class='item'>
          <text>地区信息</text>
          <view class='area'  decode="{{true}}" wx:if="{{!province}}" style='color:#999;'>地区信息</view>
          <view class='area'  decode="{{true}}" wx:else>{{province}} {{city}} {{district}}</view>
          <image class='choose' bindtap="chooseLocation" src='http://oss.myzy.com.cn/wechat/images/icon_local.png'></image>
    </view>
    <!-- 详细地址 -->
    <view class='remarks-wrap'>
    <textarea wx:if="{{!isShowText}}" placeholder='请填写详细地址：如道路、门牌号等' class='remarks' bindblur='onRemarkInput' bindconfirm='onShowText'     focus='{{onFacus}}' maxlength='500'  value='{{local}}'></textarea>
    <text wx:else class='remarks' bindtap='onShowText'>{{local}}</text>
  </view>

  <!-- 申请押金 -->
  <view class='Yj item'>
    <text>申请押金</text>
    <view class='area red'>{{money}}元</view>
  </view>

    <!-- 申请开通 -->
    <view class='btn'><button bindtap='Open'>申请开通</button></view>
  </view>

    <!-- toast -->
  <import src="../../public/appToasts/appToasts.wxml"/>
 <template is="toasts" data="{{ ..._toast_ }}"/>

 <!-- 模态框 -->
<view class="commodity_screen"  wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
  <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <view class='titles'bindtap="close">
      <image style='width:14px;height:14px' src='http://oss.myzy.com.cn/wechat/images/icon_del_vip.png'></image>
  </view>
  <!-- 方式 -->
  <view class='way'><view class='way-title'> 选择支付方式</view>
 <view class='way-cont'>
