/* pages/SetOrder/SetOrder.wxss */
@import "../../static/css/index.wxss";
.container{
  margin-top: 142rpx;
  background:white;
}
.top{
  display: flex;
  justify-content: space-between;
  padding-bottom:1px;
  box-sizing: border-box;
}
.top,.middle,.bottom{
  padding:24rpx 30rpx;
  box-sizing: border-box;
}
.mid-zs image{
 width: 28rpx;
  height:28rpx;
  margin-left: 18rpx;
  display: flex;
}
.show{
  display: block!important;
}
.bth_image2{
  width: 64rpx;
  height: 64rpx;
  margin-right: 40rpx;
  vertical-align: middle;
  animation: xuanuan 2s linear infinite;
}
.modal{
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 100%; 
    z-index:99999;
  }
  
  .modal-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 97;
    background-color: rgba(0,0,0,0.6);
  }
  
  
  .modal-layer-sm{
     width: 60%; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;  
  } 
  
  .modal-layer-md{
     width:544rpx; 
     transform : translate3d(-50%,-50%,0);
     left : 50%;    
  } 
  
  .modal-layer-full{
     width: 100%; 
     left: 0;  
  } 
  .modal-body{
    font-size:33.3rpx;
    color: #999;
  }
  .modal-body cover-view{
    font-size:25rpx;
    text-align: center;
  }
  .modal-header cover-view:first-child{
    font-size:33.3rpx;
  }
  .modal-layer{

    position: absolute;
    background: white;
    top: 50%;    
    display: flex;
    flex-direction: column;
    z-index: 98;   
    box-shadow: 0 4rpx 14rpx rgba(0,0,0,.4); 
  }
  
  .modal-header{
    background: #fff;
    color:  #333;
    padding:36rpx 48rpx 18rpx;
    font-size: 36rpx;
    text-align: left;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;  
 }

  .modal-body{
    flex:  1;  
    background: #ffffff; 
    margin-bottom:50rpx; 
  color: #999;
  font-size: 33.3rpx;
  text-align: left;
  }

  

.modal-footer{
    background: #ffffff;
    flex-direction: row;
    display: flex;
    align-items: center;
    height: 84rpx;
    line-height: 84rpx;
    width: 100%;  
    justify-content: center;
    font-size: 29.17rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;  
}
.modal-body cover-view{
  font-size: 29.17rpx;
}
.modal-close{
    color: #fff;
    font-size: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 0;
    z-index: 98;
}

.load{
  width:470rpx;
  height: 144rpx;
  background:rgba(53,53,53,.7);
  border-radius: 6px;
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left:-235rpx;
  margin-top: -77rpx;
  padding: 40rpx; 
  display: none;
  box-sizing: border-box;
  color: #f3f3f3;
  font-size: 33.3rpx;
  z-index:3000;
}
@keyframes xuanuan{
  0%{
    transform: rotate(0)
  }
  100%{
    transform: rotate(360deg)
  }
}
.top-left{
    font-weight: bold;
    color: #333;
    font-size:33.3rpx;
    line-height: 24px;
}
.top-right{
  color: #F43736;
  font-size: 30px;
  line-height: 45px;
  align-items: center;
  margin-top:2px;
  font-weight: bold;
}
.mid-js,.mid-yj,.bot-hx{
  color: #666;
  margin-bottom:6rpx;
  line-height: 24px;
  font-size: 33.3rpx;
}
.mid-yj,.bot-hx{
  margin-bottom: 0!important;
}
.middle,.bottom{
  position: relative;
}
.middle::after,.bottom::after{
   position: absolute; 
  content: '';
  width: 100%;
  left: 0;
  top: 0;
  height: 1px;
  background-color: #f3f3f3;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom;
}
.middle .mid-zs,.bottom .bot-title{
  font-size:33.3rpx;
  line-height: 24px;
  font-weight: bold;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}
.btns{
  position: absolute;
  bottom:30rpx;
  width: 100%;
  background: white;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.btn{
  line-height: 42px;
  background: #F43736;
  color: white;
  border-radius:4px;
  display: flex;
  justify-content: center;
  font-size: 33.3rpx;
}