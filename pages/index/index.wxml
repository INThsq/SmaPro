    <image class='ups' src='http://oss.myzy.com.cn/wechat/images/icon_shouye_xialajiantous.png'></image>
    </view> 
    <!-- 页面内容 -->
</view>
    
</view>

<view class='cont'  hidden="{{hiddenName}}">
