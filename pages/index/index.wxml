  </navigator>
  </view>


<view class='container' hidden='{{hides}}'>
 <!--搜索-->
<scroll-view scroll-y="true" scroll-top="{{scrollTop}}" style='height:{{scrollHeight}}px' bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad"  bindscroll="scroll" >
<!-- 轮播图 -->
<view class='swipercontent'>
  <swiper class='swiper' autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange">
    <block wx:for="{{Banner}}" wx:key="unique">
      <swiper-item  bindtap='navCour' data-id="{{item.jump_type}}"  data-gift="{{item.id}}" data-name="{{item.unique_name}}" data-type='{{item.jump}}'>
        <image src="{{item.image}}"   class="slide-image fade_in" width="355" height="150"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="dotes">
    <block wx:for="{{Banner}}" wx:key="unique">
      <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
    </block>
  </view>
</view>


<!-- 滑动选项卡 -->
<view class='swipercontent tabs'>
  <swiper class='swiper2' current="{{swiperCurrents}}" bindchange="swiperChanges">
      <swiper-item>
        <view class='tab_conts' style='width:100%;height:100%;background:#fff'>
             <view class='courtesy_cont One'>
             <block  wx:for="{{wxIndex.application}}"  wx:key="index" wx:if="{{index<5}}">
              <view class='sy' data-index='{{index}}'  bindtap='navCour' data-id="{{item.jump_type}}" data-name="{{item.unique_name}}" data-type='{{item.jump}}'>
                  <navigator  hover-class="none">
                  <image src='{{item.image}}'></image>
                  <view class='sy_title'>
                  {{item.name}}
                  </view>
                  </navigator>
              </view>
            </block>
            </view>
        </view>
      </swiper-item>
      <swiper-item>
        <view class='tab_conts' style='width:100%;height:100%;background:#fff'>
      <view class='courtesy_cont One'>
             <block  wx:for="{{wxIndex.application}}"
              wx:key="index" wx:if="{{index>=5&&index<11}}">
              <view class='sy'  bindtap='navCour' data-jump="{{item.jump}}" data-id="{{item.jump_type}}" data-name="{{item.unique_name}}" data-type='{{item.jump}}'>
                  <navigator  hover-class="none">
                  <image src='{{item.image}}'></image>
                  <view class='sy_title'>
                  {{item.name}}
                  </view>
                  </navigator>
              </view>
            </block>
            </view>
      </view>
      </swiper-item>
  
  </swiper>
  <view class="dots">
    <block wx:for="{{imgUrlss}}" wx:key="unique">
      <view class="dot{{index == swiperCurrents ? ' active' : ''}}"></view>
    </block>
  </view>
</view>

