<cover-view class='Cover' hidden="{{actionSheetHidden}}" >
<cover-view style='position: absolute;bottom:0;width:100%;'>
<block wx:for="{{list}}" wx:key="{{index}}">
    <cover-view class='cover-list' data-name="{{item.dot_name}}" data-id="{{item.mall_dot_authorize_id}}" data-num="{{item.order_num}}"  bindtap="itemChange">{{item.dot_name}}</cover-view>
    </block>
    <cover-view style='height:16rpx;background:#FAFAFA'></cover-view>
    <cover-view class='canel' bindtap='Canel'>取消</cover-view>

</cover-view>

</cover-view>


 <!-- toast -->
  <import src="../../public/appToasts/appToasts.wxml"/>
  <template is="toasts" data="{{ ..._toast_ }}"/>

  <!-- 模态框 -->
   <cover-view   hidden="{{!isShows}}"  class='modal'>
      <cover-view  data-type="mask"  catchtap='hideModal' class='modal-mask' ></cover-view>
      <cover-view  class='modal-layer  modal-layer-radius {{modalSize == "sm" ? " modal-layer-sm" : " modal-layer-md" }} ' >
          <!-- 头部 -->
          <cover-view class='modal-header'>        
              <cover-view>温馨提示</cover-view>        
          </cover-view>

          <!-- 内容区域 -->
          <cover-view class='modal-body'>         
            <cover-view>{{Toast==1?top.task_title.remark:top.task_title.button_tip}}</cover-view>                         
          </cover-view>
          <cover-view class='modal-footer' bindtap='Sure'>
                <cover-view>确定</cover-view>
          </cover-view>
      </cover-view>
  </cover-view>


   <!-- load -->
   <view class="load {{isShow ? 'show' : ''}}" >
    <image class="bth_image2"  animation="{{animationData}}"   src='http://oss.myzy.com.cn/wechat/images/icon_jiazaishuaxin.png'></image>正在加载…
    </view>

